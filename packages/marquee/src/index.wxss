.marquee-container {
  position: relative;
  overflow: hidden;
}

.marquee-container.fixed {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
}

.marquee-text {
  position: absolute;
  top: 0;
  left: 0;
  white-space: nowrap;
  pointer-events: none;
}

.text {
  display: inline;
  pointer-events: none;
}
